<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/css/style.css" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap"
      rel="stylesheet"
    />
    <!-- Fonts -->
  </head>
  <body>
    <div class="container">
      <div class="row mt-5 pt-5 align-items-center justify-content-center">
        <div class="col-md-5">
          <div class="card reg-form-c p-4">
            <div class="card-body">
              <h3 class="">Register</h3>
              <%- include("partial/messages.ejs") %>
              <form action="/users/new-reg" method="POST">
                <div class="row mt-3">
                  <div class="col ps-0">
                    <label for="nameF" class="form-label fw-semibold"
                      >First Name</label
                    >
                    <input
                      type="text"
                      class="form-control"
                      id="nameF"
                      name="nameF"
                      value="<%= typeof nameF != 'undefined' ? nameF : '' %>"
                    />
                  </div>
                  <div class="col px-0">
                    <label for="nameL" class="form-label fw-semibold"
                      >Last Name</label
                    >
                    <input
                      type="text"
                      class="form-control"
                      id="nameL"
                      name="nameL"
                      value="<%= typeof nameL != 'undefined' ? nameL : '' %>"
                    />
                  </div>
                </div>
                <div class="row mt-3">
                  <label for="email" class="form-label fw-semibold"
                    >Email</label
                  >
                  <input
                    id="email"
                    type="email"
                    class="form-control"
                    name="email"
                    value="<%= typeof email != 'undefined' ? email : '' %>"
                  />
                </div>
                <div class="row mt-3">
                  <label for="phone" class="form-label fw-semibold">
                    Phone Numbers</label
                  >
                  <input
                    type="tel"
                    id="phone"
                    class="form-control"
                    name="phone"
                    value="<%= typeof phone != 'undefined' ? phone : ''%>"
                  />
                </div>
                <div class="row mt-3">
                  <label for="pass" class="form-label fw-semibold"
                    >Password</label
                  >
                  <div class="position-relative p-0">
                    <input
                      id="pass"
                      type="password"
                      class="form-control"
                      name="password"
                      value="<%= typeof password != 'undefined' ? password : '' %>"
                    />
                    <!-- showing password -->
                    <button
                      type="button"
                      class="p-0 pe-1 pb-1 w-auto border-0 position-absolute bottom-0 end-0 translate-middel-y"
                      onclick="showingPass()"
                      style="background-color: unset"
                    >
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="30"
                        height="30"
                        fill="currentColor"
                        class="bi bi-eye-fill"
                        viewBox="0 0 16 16"
                      >
                        <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0" />
                        <path
                          d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8m8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7"
                        />
                      </svg>
                    </button>
                    <!-- showing password -->
                  </div>
                </div>
                <div class="row mt-5">
                  <button
                    type="submit"
                    class="btn btn-sm btn-outline-light p-2"
                  >
                    Sign in
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script>
      function showingPass() {
        const x = document.getElementById("pass");
        if (x.type === "password") {
          x.type = "text";
        } else {
          x.type = "password";
        }
      }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
